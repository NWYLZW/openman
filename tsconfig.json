{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "sourceMap": true,
    "types": ["node", "mocha", "chai"],
    "paths": {
      "@openman/*": ["./packages/*/src"]
    },
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [ "tsconfig-paths/register", "dotenv/config" ]
  }
}